<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="2">
	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
	</listeners>
	<test name="ChromeTest">
		<parameter name="browser" value="chrome"/>
		<classes>
			<class name="web.automation.tests.LoginPageTests" />
			<class name="web.automation.tests.AddToCartTests" />
			<class name="web.automation.tests.WishListTests" />
		</classes>
	</test> 
	<test name="EdgeTest">
		<parameter name="browser" value="edge"/>
		<classes>
			<class name="web.automation.tests.LoginPageTests" />
			<class name="web.automation.tests.AddToCartTests" />
			<class name="web.automation.tests.WishListTests" />
		</classes>
	</test><!--
	Test -->
</suite> <!--
Suite -->
